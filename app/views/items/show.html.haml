  .main
    .showmain
      .contentright
        .topcontent
          .itembox
            %h2.itembox__name
              product2
            .itembox__body
              %ul.big__image
                %li.all
                  = image_tag 'icon-01.png', alt: 'tanimura', height: '100', width: '100', class: 'tanimura'
                  %ul.samall__image
                    %li
                      = image_tag 'icon-03.png', alt: 'minayoshi', height: '100', width: '100', class: 'minayoshi'
                    %li
                      = image_tag 'pict-reason-03.jpg', alt: 'nagasue', height: '100', width: '100', class: 'nagasue'
                    %li
                      = image_tag 'pict-reason-02.jpeg', alt: 'gondo', height: '100', width: '100', class: 'gondo'

            .itembox__price
              %span
                ¥800000
            .itemBox__price-detail
              %span
                (税込み)
              %span
                送料込み
