    .credit
      .credit__content
        %h2.credit__text クレジットカード情報入力
        = form_with url: pay_card_index_path, method: :post, class: "credit__form", id: 'charge-form', name: "inputForm", local: true do |f|
          .credit__info
            .credit__info__group
              = f.label :number, "カード番号", class: "credit__info__group__number"
              %span.span
                必須
              .credit__info__group__text_field
                = f.text_field :number, placeholder: "半角数字のみ", class: "text_field__number", maxlength: "16", name: "card_number", id: "card_number"
              %ul.credit__info__group__ul
                %li.credit__info__group__li
                  = image_tag("/images/credit-card2 (1).jpg", width: "40", height: "25")
                %li.credit__info__group__li
                  = image_tag("/images/credit-card2 (2).jpg", width: "40", height: "25")
                %li.credit__info__group__li
                  = image_tag("/images/credit-card2 (3).jpg", width: "40", height: "25")
                %li.credit__info__group__li
                  = image_tag("/images/credit-card2.jpg", width: "40", height: "25")     
            .credit__info__expire
              = f.label :expire, "有効期限", class: "credit__info__group__number"
              %span.span
                必須
              .credit__info__expire__box
                .credit__info__expire__box__manth
                  %select#exp_month{name: "exp_month", type: "text", class: "select__manth", name: "exp_month"}
                    %option{value: "0"}-
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  %span.span__year
                    月
                .credit__info__expire__box__manth
                  %select#exp_year{name: "exp_year", type: "text", class: "select__manth", name: "exp_year"}
                    %option{value: "2018"}-
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                  %span.span__year     
                    年
            .credit__info__security
              = f.label :code, "セキュリティコード", class: "credit__info__group__number"
              %span.span
                必須
              .credit__info__security__text_field
                = f.text_field :code, placeholder: "カード背面4桁もしくは3桁の番号", class: "text_field__security", maxlength: "4", name: "cvc", id: "cvc"
              .credit__info__security__notice
                .credit__info__security__notice__a
                  %span.question ?
                  カード裏面の番号とは？ 
              #card_token
              = f.submit "追加する", class: "credit__button",id: "token_submit", type: "submit"

